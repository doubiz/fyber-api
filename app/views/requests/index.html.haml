.container
  .request-form
    .col-md-4.col-md-offset-4
      .form-group
        =form_tag({controller: :requests , action: :create} , remote: :true, id:"request-form") do
          =fields_for :request do |f|
            .input-group
              .input-group-addon
                uid
              =f.text_field :uid, class: "form-control", placeholder: "uid (ex: player1)", required: true,:autocomplete => 'off'
            .input-group
              .input-group-addon
                pub0
              =f.text_field :pub0, class: "form-control", placeholder: "pub0 (ex: campaign1)", required: true, :autocomplete => 'off'
            .input-group
              .input-group-addon
                page
              =f.text_field :page, class: "form-control", placeholder: "page (ex: 1)", required: true, :autocomplete => 'off'
          =button_tag 'Request' , id: "submit", class: "btn btn-primary btn-block", type: :submit
#offers
#loading
  =image_tag 'loading.gif'